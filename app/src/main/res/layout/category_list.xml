<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardUseCompatPadding="true"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardElevation="10dp"
    card_view:cardMaxElevation="10dp"
    card_view:contentPadding="10dp"
    android:hardwareAccelerated="true"

   >

    <LinearLayout
        android:orientation="vertical"
      android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:id="@+id/category_images"
            android:layout_height="@dimen/recycle_image_height"
            android:layout_width="@dimen/recycle_image_width"
            android:scaleType="fitXY"
            android:padding="@dimen/card_view_padding"
            android:elevation="@dimen/margin_basic"
            android:src="@drawable/pic1"
            android:layout_marginTop="@dimen/margin_basic"
            android:layout_gravity="center_horizontal"
            />


        <TextView android:id="@+id/category_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
           android:padding="@dimen/padding_basic"
            android:textColor="@color/colorAccent"
            android:text="jhg"
            />
    </LinearLayout>



    <!--
        </android.support.v7.widget.CardView>-->

</android.support.v7.widget.CardView>